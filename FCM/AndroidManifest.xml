        <activity
            android:name="gow.fcm.popups.PopUp_config_entre"
            android:label="@string/title_activity_pop_up_config_entre"
            android:screenOrientation="landscape"
            android:theme="@style/PopupTheme" />
        
        <activity
            android:name="gow.fcm.pantallas.EstadisticasJugador"

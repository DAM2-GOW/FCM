            android:name="gow.fcm.popups.PopUpPlayersSelector"
            android:screenOrientation="landscape" />
        
        <activity
            android:name="gow.fcm.pantallas.PantallaPerfilEntrenador"
            android:label="@string/title_activity_pantalla_perfil_entrenador"
            android:screenOrientation="landscape" />
        
        <activity
            android:name="gow.fcm.pantallas.DetalleCalendario"
            android:screenOrientation="landscape" />
        
        <activity android:name="gow.fcm.popups.PopUpNewUser"
            android:label="@string/title_activity_pop_up_new_user"
            android:screenOrientation="landscape"
            android:theme="@style/PopupTheme"/>
        
        
        <activity
            android:name="gow.fcm.popups.PopUpRecoverPassword"
            android:label="@string/title_activity_popup_recover_password"
            android:theme="@style/PopupTheme" />
        

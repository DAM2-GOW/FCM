        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="gow.fcm.pantallas.LoginScreen"
            android:label="@string/title_activity_login_entrenador"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden">
            
            <intent-filter>
                
                <action android:name="android.intent.action.MAIN" />
                
                <category android:name="android.intent.category.LAUNCHER" />
                
            </intent-filter>
            
        </activity>
        
        <activity
            android:name="gow.fcm.pantallas.PaginaPrincipal"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        
        <activity
            android:name="gow.fcm.pantallas.PaginaCalendario"
            android:label="@string/title_page_calendar"
            android:screenOrientation="landscape" />
        
        <activity
            android:name="gow.fcm.popups.PopupPizarraDigital"
            android:label="@string/title_popup_blackboard"
            android:screenOrientation="landscape"
            android:theme="@style/PopupTheme" />
        
        <activity
            android:name="gow.fcm.popups.PopUpNuevoEditarJugador"
            android:label="@string/title_activity_pop_up_nuevo_jugador"

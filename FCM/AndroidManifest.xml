<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gow.fcm.footballcoachmanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.CAMERA" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="gow.fcm.pantallas.PaginaPrincipal"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="gow.fcm.pantallas.PaginaCalendario"
            android:label="@string/title_page_calendar" />
        <activity
            android:name="gow.fcm.popups.PopupPizarraDigital"
            android:label="@string/title_popup_blackboard"
            android:theme="@style/PopupTheme" />
        <activity
            android:name="gow.fcm.pantallas.Config_entre"
            android:label="@string/title_activity_config_entre" >
        </activity>
    </application>

</manifest>
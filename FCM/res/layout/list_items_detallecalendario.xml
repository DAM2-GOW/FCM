<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="152dp"
    android:background="@color/black"
    android:padding="6dip" >

    <TextView
        android:id="@+id/textView_tituloeventocalendario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:gravity="center_vertical|center_horizontal"
        android:maxLines="2"
        android:singleLine="true"
        android:text="Item2 - Player Type"
        android:textColor="@color/white_smoke"
        android:textSize="32sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView_tipoevento"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/hora"
        android:layout_alignBottom="@+id/hora"
        android:layout_alignRight="@+id/textView_tituloeventocalendario"
        android:layout_marginRight="180dp"
        android:gravity="center"
        android:text="Entrenamiento"
        android:textColor="@color/white"
        android:textSize="22sp" />

<!--  
   <View
        android:id="@+id/view1"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_alignBottom="@+id/secondLine"
        android:layout_centerHorizontal="true"
        android:background="@drawable/divider_element" />
   -->

    <TextView
        android:id="@+id/textView_lineagris"
        android:layout_width="800dp"
        android:layout_height="1dp"
        android:layout_alignRight="@+id/textView_tipoevento"
        android:layout_below="@+id/textView_tituloeventocalendario"
        android:background="@color/black_cow"
        android:gravity="center_horizontal"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView_tipoentrenamiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_tipoevento"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Tipo"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/hora"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_tituloeventocalendario"
        android:layout_marginRight="116dp"
        android:layout_marginTop="31dp"
        android:layout_toLeftOf="@+id/textView_tipoentrenamiento"
        android:gravity="center|center_vertical"
        android:text="Hora"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:typeface="serif" />
    
</RelativeLayout> 

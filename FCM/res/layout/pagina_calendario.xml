<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/black_cow"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin" >

    <CalendarView
        android:id="@+id/calendario_eventos"
        android:layout_width="match_parent"
        android:layout_height="640dp"
        android:layout_gravity="top"
        android:background="@drawable/borde_calendario_eventos"
        android:dateTextAppearance="@android:style/TextAppearance.Medium"
        android:focusedMonthDateColor="@color/white"
        android:selectedDateVerticalBar="@color/white"
        android:selectedWeekBackgroundColor="@android:color/transparent"
        android:unfocusedMonthDateColor="@color/black"
        android:weekDayTextAppearance="@android:style/TextAppearance.Large.Inverse"
        android:weekSeparatorLineColor="@color/white" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        layout="@layout/eventos_calendario" />

</LinearLayout>
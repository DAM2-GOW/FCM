<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_cow"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PopupRecoverPassword" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/TV_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="@string/popup_recoverPass_lblIntroUser"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:typeface="serif" />

        <EditText
            android:id="@+id/txtUsuario"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:inputType="text"
            android:maxLength="45"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnConfirmar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popup_recoverPass_btnComprobar"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:background="@drawable/btn_style"
            android:typeface="serif" />
        
    </LinearLayout>
    
    <ImageView
        android:id="@+id/divisor_negro1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/div_img"
        android:gravity="left"
        android:src="@drawable/separator_long_horizontal_glow_black_middle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="@string/popup_recoverPass_lblPreguntaSecreta"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textView_pregunta_secreta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:typeface="serif" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/graphic_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="@string/popup_recover_password_textview_secret_answer"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:typeface="serif" />

        <EditText
            android:id="@+id/respuestaSecreta"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:inputType="text"
            android:maxLength="45"
            android:textColor="@color/white"
            android:textSize="22sp" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btnConfirmar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popup_recoverPass_btnComprobar"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:background="@drawable/btn_style"
            android:typeface="serif" />

    </LinearLayout>
    
    <ImageView
        android:id="@+id/divisor_negro2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/div_img"
        android:gravity="left"
        android:src="@drawable/separator_long_horizontal_glow_black_middle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="@string/popup_recoverPass_lblContrasenya"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:typeface="serif" />
        
        <TextView
            android:id="@+id/textView_show_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="26sp" />
        
        <Button
            android:id="@+id/btn_volver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popup_recoverPass_lblVolver"
            android:textColor="@color/white"
            android:background="@drawable/btn_style"
            android:textSize="22sp"
            android:typeface="serif" />

    </LinearLayout>

</LinearLayout>
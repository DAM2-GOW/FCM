<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_cow"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PopupRecoverPassword" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TV_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introduzca usuario"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <Space
            android:layout_width="60dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/txtUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <Space
            android:layout_width="90dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnConfirmar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comprobar"
            android:textColor="@color/white" />
        
    </LinearLayout>
    
    <Space
            android:layout_width="wrap_content"
            android:layout_height="25dp" />
    
    <ImageView
        android:id="@+id/divisor_negro1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/div_img"
        android:gravity="left"
        android:src="@drawable/separator_long_horizontal_glow_black_middle" />
    
    <Space
            android:layout_width="wrap_content"
            android:layout_height="25dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esta es tu pregunta secreta"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <Space
            android:layout_width="50dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/respuestaSecreta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <Space
            android:layout_width="50dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnConfirmar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comprobar"
            android:textColor="@color/white" />
    </LinearLayout>
    
    <Space
            android:layout_width="wrap_content"
            android:layout_height="25dp" />
    
    <ImageView
        android:id="@+id/divisor_negro2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/div_img"
        android:gravity="left"
        android:src="@drawable/separator_long_horizontal_glow_black_middle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu contraseña es:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
        
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:background="@color/white"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
        
        <Button
            android:id="@+id/volver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:text="Volver" />

    </LinearLayout>

</LinearLayout>
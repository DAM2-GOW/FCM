<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_cat"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EstadisticasJugador" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <GridLayout
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:background="@color/black_cow"
            android:columnCount="2" >

            <ImageView
                android:id="@+id/imagen_jug"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="1"
                android:src="@drawable/no_coach_photo" />

            <ImageView
                android:id="@+id/imagen_tipo"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="4"
                android:src="@drawable/btn_all_attack" />

            <TextView
                android:id="@+id/dorsal_jug"
                android:layout_width="wrap_content"
                android:layout_column="1"
                android:layout_gravity="right|bottom"
                android:layout_row="1"
                android:text="0"
                android:textColor="@color/white_smoke"
                android:textSize="75sp" />

            <TextView
                android:id="@+id/posicion_jug"
                android:layout_column="1"
                android:layout_gravity="left|bottom"
                android:layout_row="1"
                android:text="TextView"
                android:textColor="@color/white_smoke"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/edad_jug"
                android:layout_column="1"
                android:layout_gravity="left|center_vertical"
                android:layout_row="1"
                android:text="TextView"
                android:textColor="@color/white_smoke"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/nombre_jug"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="left|top"
                android:layout_row="1"
                android:text="TextView"
                android:textColor="@color/white_smoke"
                android:textSize="20sp" />

        </GridLayout>

        <ListView
            android:id="@+id/statistics_list"
            android:layout_width="match_parent"
            android:layout_height="422dp" >
        </ListView>

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>

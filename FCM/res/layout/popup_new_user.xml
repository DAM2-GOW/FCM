<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_cow"
    android:gravity="center|center_horizontal"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PopUpNewUser" >
    
 	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center|left|right|top"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/new_user_pic_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/info_img"
            android:src="@drawable/no_coach_photo" />

        <Button
            android:id="@+id/btn_edit_photo_entrenador"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:text="@string/editar_foto"
            android:textColor="@color/white" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/new_nom_entrenador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popup_newUser_lblNombre"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/nom_Entrenador"
                android:layout_width="421dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/white"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/new_apellidos_entrenador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popup_newUser_lblApellidos"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/apellidos_entrenador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:textColor="@color/white"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/nom_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popup_newUser_lblUser"
                android:textColor="@color/white"
           		android:textSize="22sp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/et_new_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/white"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/new_pass_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popup_newUser_lblContrasenya"
                android:textColor="@color/white"
            	android:textSize="22sp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/et_pass_user"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/white"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/new_rep_pass_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popup_newUser_lblRepContrasenya"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/rep_pass_user"
                android:layout_width="321dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/white"
                android:textSize="22sp" >

                <requestFocus />
            </EditText>
        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Space
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        
        <ImageView
        android:id="@+id/img_div1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/div_img"
        android:gravity="left"
        android:src="@drawable/separator_vertical_glow_black" />
        
        <Space
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/new_pregunta_secreta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popup_newUser_lblPreguntaSecreta"
                android:textColor="@color/white"
            	android:textSize="22sp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>
        
        <Spinner
            android:id="@+id/sp_security_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/new_respuesta_secreta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popup_newUser_lblRespuesta"
                android:textColor="@color/white"
            	android:textSize="22sp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/et_secret_answer"
                android:layout_width="321dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/white"
                android:textSize="22sp" />

        </LinearLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_marginBottom="2dp"
             android:layout_marginTop="25dp"
             android:background="@color/black_cat" />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical" >

             <TextView
                 android:id="@+id/textView2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/popup_new_user_team_name"
                 android:textColor="@color/white"
                 android:textSize="22sp" />

             <EditText
                 android:id="@+id/editText_team_name"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:ems="10"
                 android:textColor="@color/white"
                 android:textSize="22sp" android:inputType="text"/>

         </LinearLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_marginBottom="25dp"
             android:layout_marginTop="2dp"
             android:background="@color/black_cat" />

        <Button
            android:id="@+id/btn_save_new_user"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popup_newUser_btnGuardar"
            android:textColor="@color/white"
            android:background="@drawable/btn_style"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/popup_newUser_camposObligatorios" />

    </LinearLayout>

</LinearLayout>

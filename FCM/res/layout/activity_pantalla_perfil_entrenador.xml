<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_cow"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PantallaPerfilEntrenador" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center|left|right|top"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_nuevoEntrenador_lblEntrenador"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/photo_entrenador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/info_img"
                android:src="@drawable/no_coach_photo" />

            <Button
                android:id="@+id/edit_photo_entrenador"
                android:layout_width="113dp"
                android:background="@drawable/btn_style"
                android:layout_height="wrap_content"
                android:text="@string/editar_foto"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_nuevoEntrenador_lblNomEntrenador"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/new_nom_Entrenador"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/white"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_nuevoEntrenador_lblApellidosEntrenador"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/new_apellidos_Entrenador"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:ems="10" />

        </LinearLayout>

        <Button
            android:id="@+id/guardarNombreEntrenador"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:background="@drawable/btn_style"
            android:text="@string/activity_nuevoEntrenador_btnGuardarCambios" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_cat" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_nuevoEntrenador_lblEquipo"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_nuevoEntrenador_lblNomEquipo"
                android:textColor="@color/white"
           		android:textSize="22sp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/new_nom_Equipo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/white"
            	android:textSize="22sp"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:id="@+id/guardarEquipo"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:background="@drawable/btn_style"
            android:text="@string/activity_nuevoEntrenador_btnGuardarCambios" />
        
        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Space
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        
        <ImageView
        android:id="@+id/img_div1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/div_img"
        android:gravity="left"
        android:src="@drawable/separator_vertical_glow_black" />
        
        <Space
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="430dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_nuevoEntrenador_lblContrasenya"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_nuevoEntrenador_lblContrasenya"
                android:textColor="@color/white"
            	android:textSize="22sp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/new_pass_Entrenador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_nuevoEntrenador_lblNewContra"
                android:textColor="@color/white"
            	android:textSize="22sp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/rep_new_pass_Entrenador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:ems="10" />

        </LinearLayout>

        <Button
            android:id="@+id/guardarContraEntrenador"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:background="@drawable/btn_style"
            android:text="@string/activity_nuevoEntrenador_btnGuardarCambios" />
        
        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_cat" />

    </LinearLayout>

</LinearLayout>
